{
  "compileOnSave": true,
  "compilerOptions": {
      "outDir": "./dist/",
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "target": "ESNext",
      "alwaysStrict": false,
      "strict": false,
      "strictNullChecks": true,
      "removeComments": true,
      // "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "noImplicitAny": false,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "jsx": "react"
      }
      // "module": "CommonJS", //this is what its normally set to
      // "noImplicitAny": true,
      // "noUnusedLocals": true,
      // "noUnusedParameters": true,
      // "transpileOnly": true,
    // //   "types": [@type/files]
    //   "tsBuildInfoFile": "./frontend/.tsbuildinfofile",
    //   "charset": "utf8",
    //   "declaration": true, 
    //   "allowSyntheticDefaultImports": true,
    //   "extendedDiagnostics": true,
    //   "composite": true,
    //   "incremental" : true,
    // //   "rootDir": "./frontend/",
    // //   "sourceRoot": "./frontend",
    //   "diagnostics": true
  },
  "include": [
      "frontend/**"
  ],
  "exclude": [
      "backend",
      "tests",
      "dist",
      "node_modules",
      "**/*.spec.js",
      "**/*.spec.ts",
      "**/*.test.ts",
      "**/*.test.ts"
  ]
} 